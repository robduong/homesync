alias leader shift;ctrl

bind l:${leader}                chain  push right bar-resize:screenSizeX/2 | push right bar-resize:screenSizeX/3 | push right bar-resize:screenSizeX*2/3
bind h:${leader}                chain  push left  bar-resize:screenSizeX/2 | push left  bar-resize:screenSizeX/3 | push left  bar-resize:screenSizeX*2/3
bind k:${leader}                       push up    bar-resize:screenSizeY/2
bind j:${leader}                       push down  bar-resize:screenSizeY/2
bind m:${leader}                       push up    bar-resize:screenSizeY
bind i:${leader}                       throw 0    resize:screenSizeX;screenSizeY
bind o:${leader}                       throw 1    resize:screenSizeX;screenSizeY
bind g:${leader}                       grid padding:5 0:6,6 1:6,6
bind ;:${leader}                       hint JKLH

layout single 'iTerm'                  push up bar-resize:screenSizeY
layout single 'Google Chrome':REPEAT   push up bar-resize:screenSizeY
layout single 'Microsoft Outlook'      push up bar-resize:screenSizeY
bind 1:${leader} layout single

layout dual 'iTerm'                    throw 1 resize:screenSizeX;screenSizeY
layout dual 'Google Chrome':REPEAT     throw 1 resize:screenSizeX;screenSizeY
layout dual 'Microsoft Outlook'        throw 0 resize:screenSizeX;screenSizeY
layout dual 'Skype'                    throw 0 resize:screenSizeX;screenSizeY
layout dual 'Adium':REPEAT             throw 0 resize
layout dual 'LimeChat'                 throw 0 resize
bind 2:${leader} layout dual

default single count:1
default dual count:2
default dual count:2
