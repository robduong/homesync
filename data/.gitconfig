[user]
  name = Steven Occhipinti
  email = ***REMOVED***

[init]
  templatedir = ~/.git_template

# The majority of this file was from Bobes and may need tweaking

[color]
  diff = auto
  branch = auto
  interactive = auto
  pager = true
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[color "status"]
  added = green
  changed = red
  untracked = cyan

[core]
  excludesfile = ~/.gitignore-global
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[branch]
  autosetupmerge = true

[diff]
  renames = copy
  tool = meld

[format]
  pretty = %C(yellow)%h%C(red)%d %C(reset)%s %C(green)%an %C(bold black)%cr

[log]
  date = relative

[pager]
  status = true
  show-branch = true

[push]
  default = tracking

[rebase]
  stat = true

[rerere]
  # remembers manual conflict resolutions so you don't have to redo them later
  enabled = true
  autoupdate = true

[commit]
  template = /Users/steve.occhipinti/.git_commit_template

[hub]
  host = git.***REMOVED***.com.au
  protocol = ssh

# This block of aliases should be last in this file (see ~/.bash_git)
[alias]
  a = add
  aa = add -A .
  ap = add -p
  ai = add -i
  c = commit -v
  ca = commit -v -a
  cam = commit -v --amend
  co = checkout
  b = branch
  d = diff
  dw = diff --word-diff
  dc = diff --cached
  f = fetch
  p = pull
  pr = pull --rebase
  l = log --graph --decorate
  la = log --graph --decorate --all
  s = status -sb
  st = status -sb
  sh = show
  sf = show --pretty=full
  ri = rebase -i
  rc = rebase --continue
  ra = rebase --abort
